.bottom-two-line
  position relative
  display inline-flex
  overflow hidden

  &:after, &:before
    content ''
    position absolute
    bottom 0
    left 0
    width 100%
    height 1px
    will-change transform
    background-color currentColor
    +lt-lg()
        bottom 0

  &:after
    transition transform 0.3s ease-in-out 0.3s

  &:before
    transform translateX(-100%)
    transition transform 0.3s ease-in-out

  &:hover
    &:after
      transform translateX(100%)
      transition transform 0.3s ease-in-out

    &:before
      transform translateX(0)
      transition transform 0.3s ease-in-out 0.3s

.bottom-two-line_white
  &:after,
  &:before
    background-color #ffffff

.line-to-top
  text-decoration none
  color $violet
  padding-bottom 1px
  box-sizing border-box
  box-shadow inset 0 -3px 0 $violet
  transition 0.2s
  &:hover
    color $white;
    box-shadow inset 0 -2em 0 $violet
    transition all 0.45s cubic-bezier(0.86, 0, 0.07, 1)
